<form>
    <div class="form-group">
      <label>Title</label>
      {{input type="text" class="form-control" value=title placeholder="Add Tasks..."}}
    </div>
    <div class="form-group">
      <label>Due Date</label>
      {{input type="date" class="form-control" value=date}}
    </div>
    <div class="form-group">
      <label>Description</label>
      {{textarea type="" class="form-control" value=description placeholder="Description Tasks..."}}
    </div>
    <button {{action 'addTasks'}} class="btn btn-primary">Submit</button>
</form>
